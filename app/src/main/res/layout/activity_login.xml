<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">


    <ImageView
        android:id="@+id/imagenLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="50dp"
        android:layout_above="@+id/textoUsuario"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_logo_login" />

    <EditText
        android:id="@+id/textoUsuario"
        android:layout_width="233dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/textoContrasena"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_verde_redondo"
        android:drawableLeft="@drawable/ic_usuario"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlanco"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/textoContrasena"
        android:layout_width="233dp"
        android:layout_height="43dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_verde_redondo"
        android:drawableLeft="@drawable/ic_contrasena"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Contraseña"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlanco"
        android:textSize="20dp"
        android:visibility="visible" />


    <Button
        android:id="@+id/botonRegistrar"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textoUsuario"
        android:layout_below="@+id/btnRecuerda"
        android:background="@drawable/bg_blanco_redondo"
        android:text="Registrase"
        android:textAllCaps="false"
        android:textColor="@color/colorNegro"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/botonEntrar"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignEnd="@+id/textoContrasena"
        android:layout_alignTop="@+id/botonRegistrar"
        android:textColor="@color/colorNegro"
        android:layout_marginEnd="-2dp"
        android:textSize="16dp"
        android:background="@drawable/bg_blanco_redondo"
        android:textAllCaps="false"
        android:text="Entrar" />


    <Button
        android:id="@+id/botonOlvidar"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="¿Olvidaste tu contraseña?"
        android:textSize="16dp"
        android:textColor="@color/colorBlanco"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        />

    <CheckBox
        android:id="@+id/btnRecuerda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/textoUsuario"
        android:layout_below="@+id/textoContrasena"
        android:text="Recordar"
        android:textColor="@color/colorBlanco"
        android:textSize="16dp" />


</RelativeLayout>