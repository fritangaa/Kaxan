<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UM.Menu.perfil">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgPUM"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="1"
        app:civ_shadow_color="#8BC34A"
        android:src="@drawable/ic_perfil_defecto"
        />

    <EditText
        android:id="@+id/nombrePUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlanco"
        android:background="@drawable/bg_verde_redondo"
        android:padding="10dp"
        android:layout_below="@+id/imgPUM"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Maximiliano"
        />

    <EditText
        android:id="@+id/edadPUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlanco"
        android:background="@drawable/bg_verde_redondo"
        android:padding="10dp"
        android:layout_below="@+id/nombrePUM"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="date"
        android:hint="26/05/1997" />

    <TextView
        android:id="@+id/contraPUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlanco"
        android:background="@drawable/bg_verde_redondo"
        android:padding="10dp"
        android:layout_below="@+id/edadPUM"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="************"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/botonPUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contraPUM"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_blanco_redondo"
        android:layout_marginTop="30dp"
        android:text="Guardar"
        android:textColor="@color/colorNegro" />
</RelativeLayout>