<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UM.Menu.perfil">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imagenUMRPerfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="1"
        app:civ_shadow_color="#8BC34A"
        android:src="@drawable/ic_perfil_defecto"
        />

    <EditText
        android:id="@+id/textoUMRNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_usuario"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlancoHint"
        android:background="@drawable/bg_verde_redondo"
        android:padding="10dp"
        android:layout_below="@+id/imagenUMRPerfil"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nombre"
        />

    <EditText
        android:id="@+id/textoUMRTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_telefono"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:maxLength="10"
        android:layout_below="@+id/textoUMRNombre"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_verde_redondo"
        android:ems="10"
        android:hint="TelÃ©fono"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlancoHint"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/textoUMREdad"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_calendario"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/textoUMRNombre"
        android:layout_below="@+id/textoUMRTelefono"
        android:background="@drawable/bg_verde_redondo"
        android:ems="10"
        android:hint="Fecha"
        android:inputType="date"
        android:padding="10dp"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlancoHint"
        android:textSize="20dp" />

    <Button
        android:id="@+id/botonUMREdad"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/textoUMRNombre"
        android:layout_below="@+id/textoUMRTelefono"
        android:background="@drawable/bg_blanco_redondo"
        android:textAllCaps="false"
        android:text="Edad"
        android:textColor="@color/colorNegro" />


    <EditText
        android:id="@+id/textoUMRContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoUMRCorreo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_verde_redondo"
        android:drawableLeft="@drawable/ic_contrasena"
        android:drawablePadding="10dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="***********"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlancoHint"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/textoUMRCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoUMREdad"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_verde_redondo"
        android:drawableLeft="@drawable/ic_contrasena"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textWebEmailAddress"
        android:padding="10dp"
        android:textColor="@color/colorBlanco"
        android:textColorHint="@color/colorBlancoHint"
        android:textSize="20dp" />


    <Button
        android:id="@+id/botonUMRGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textoUMRContrasena"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_blanco_redondo"
        android:text="Guardar"
        android:textColor="@color/colorNegro" />
</RelativeLayout>